@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification"></partial>


<div class="container p-3">
    <div class="row pt-4">


        <div class="col-6">
            <h2 class="text-primary">CoverList list</h2>
        </div>


        <div class="col-6 text-end">
            <a asp-controller="CoverTypes" asp-action="Create" class="btn btn-primary"><span><i class="bi bi-plus-circle"></i></span> &nbsp; Create New Cover Type</a>
        </div>

    </div>

    <br />
    <br />


    <table class="table-striped table-bordered table" style="width:100%">
        <thead>
            <tr>
                <th>Cover Name</th>
               
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width:50%;">@obj.Name</td>
                   
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="CoverTypes" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-controller="CoverTypes" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i></a>

                        </div>
                    </td>
                    @*  <td>
                    <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td> *@
                </tr>
            }

        </tbody>
    </table>
</div>


