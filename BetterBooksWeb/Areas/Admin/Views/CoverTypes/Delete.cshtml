@model BetterBooks.Models.CoverType


<form method="post" asp-action="Delete">
	<div class="border p-3 mt-4">
		<div class="row pb-2">

			<h2 class="text-primary">Delete Cover Type</h2>
			<hr />
			<hr />

		</div>
		<div asp-validation-summary="All" class="text-danger">
		</div>

		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" readonly />
			@* I can use readonly also in the above input field *@
		</div>
		
		<button type="submit" class="btn btn-primary" style="width:150px">Delete Record</button>
		<a class="btn btn-secondary" asp-controller="CoverTypes" asp-action="Index" style="width:150px">Back To List</a>
	</div>

</form>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

